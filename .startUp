mkplaylist() {
	path="$(echo /run/user/1000/gvfs)"
	if [ -z $path ];then
		echo "No Phone connected"
	else
		echo $path
		echo $1
		mkdir "$1.playlist"
		. cd $1.playlist
		while read line
		do
			adb pull "$(echo $line|tr -d '\r')"
		done < "../$1" &&
		zip -r $1.zip $1.playlist &&
		rm -rf $1.playlist
		cd ../
	fi
}

